generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  clerkId   String   @unique
  role      String
  email     String   @unique
  createdAt DateTime @default(now())
}

model Job {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  title       String
  description String
  location    String
  salary      Int?
  ownerId     String   @db.ObjectId
  createdAt   DateTime @default(now())
}
